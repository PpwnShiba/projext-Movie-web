<%- include('partials/header-nav.ejs') %> 

<div class="search-movie-mobile">
  <form class="d-flex " action="/movies/search-movie" method="post">
    <input class="search-cinema" type="search" name="search_location" placeholder="  Search movies Here . . ." aria-label="Search">
    <button type="submit">
      <i class="fas fa-search fa-2x"></i>
    </button>
  </form>
</div>

<div class="header-movies-page" >
 <div class="body">
   <img src="data:image/svg+xml;base64," />
   <span class="movies-text">Movies</span><br>
   <span class="nowshowing-text">Now showing</span> 
  </div>
</div>

<div class="dropdown-sort">
  <span>Pick a Sort <i class="fas fa-sort-alpha-down fa-lg"></i></span>

  <div class="dropdown-content-sort">
    <a href="/movies/now-showing/sort-by-Alphabet">Sort by Alphabet</a>
    <span>Sort by Average Rating<i class="fas fa-caret-down"></i></span> 
    <!-- <a href="#">Sort by Average Rating</a>  -->
    <a href="/movies/now-showing/sort-by-rating/Descending"><i class="fas fa-angle-right"></i>Descending</a>
    <a href="/movies/now-showing/sort-by-rating/Ascending"><i class="fas fa-angle-right"></i>Ascending</a>
    <a href="/movies/now-showing/sort-by-genre">Sort bt Genre</a>
  </div>
</div> 

<div class="movies-page-nowshowing">
    <div class="container movies">
      
      
    <!--  GRID CARD MOVIES Now showing -->
    <div  id="page-comingsoon">
      <div class="album py-5 ">
        <div class="container movie-cards">
          <div class="row  g-3 justify-content-center">
            <% var i=0; %>
            <% allmovies_now.forEach(function(allmovies_now){ %>
            <div class="col row-cols-1 row-cols-sm-2 row-cols-md-4 col-xl-3">
              <div class="card">
                <img src="<%= allmovies_now.image %>" class="card-img-top">
  
                  <div class="card-body">
                    <a href="/Movies/Movie-Showtime/<%= allmovies_now._id %>">
                      <i class="fas fa-play play-btn" data-toggle="tooltip" data-placement="bottom" title="Play Trailer" ></i>
                    </a>
                    <h6 class="card-title"><%= allmovies_now.name %></h6>
                    <span>Genre : <%= allmovies_now.genre %></span>

                    <span class="movie-info"><i class="fas fa-star" style="margin-right:  2px;"></i><%= allmovies_now.score %> / 10</span><br>
                    
                    <form id="btn-form" action="/user/myfav/<%= allmovies_now._id %>/<%= allmovies_now.name %>" method="GET" >
                      <button type="button" class="btn btn-danger btn-addfav" data-bs-toggle="modal" data-bs-target="#Modal<%= i %>">
                        <i class="fas fa-heart fa-lg"></i><span>Add to my favorite</span>
                      </button>
                      <div class="modal fade modal-addfav" id="Modal<%= i %>" tabindex="-1">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body" ><i class="far fa-laugh fa-4x" style="margin-left: 150px; margin-bottom: 20px;" ></i>
                              <p style="text-align: center;">Add <%= allmovies_now.name %> to favorite?</p> 
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>                         
                              <button type="submit" class="btn btn-success">Confirm</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      </form>
                  
                  
                  </div> 
              
              </div>
            </div>
            <% i++}) %>
          </div>
        </div>
        
      
    </div>

  </div>
</div>



<%- include('partials/footer.ejs') %> 