<%- include('partials/header-nav.ejs') %> 
<div class="movie-details ">
    <img src="<%= movie.header %>" >
    <div class="album py-5 ">
        <div class="container position-relative ">
            <div class="row align-items-start">
                <div class="col-sm-4 textopic">
                        <h1><%= movie.name %></h1>
                        <h4>
                            <img src="data:image/svg+xml;base64," />
                            <span> Genre : <%= movie.genre %></span>
                        </h4>
                        <i class="fas fa-star fa-3x"></i><span> Rate: <%= movie.rate %></span>
                        <br><i class="fas fa-history fa-3x"></i><span> Running Time: <%= movie.time %></span>
                        <form action="#">
                            <button>
                               <i class="fas fa-ticket-alt fa-lg"></i>
                                Get Tickets
                            </button>
                        </form> 
                </div>
                <div class="col video ">
                    <div class="border-trailer">
                        <h5>Watch the Trailer</h5>
                        <iframe width="420" height="315" class="float-end"
                        src="https://www.youtube.com/embed/<%= movie.video %>">
                        </iframe> 
                    </div>
                </div>
            </div>
        </div>
   
        <div class="content-details container">
            <div class="row align-items-start poster-content">
                <div class="col poster">
                    <img src="<%= movie.image %>" > 
                </div>
                <div class="col-sm beside-poster">
                   <div class="block-content">
                    <h1  class="text"><%= movie.name %></h1>
                    <h4  class="text">Genre : <%= movie.genre %></h4>
                    <h4  class="text">Rate <i class="fas fa-star"></i> : <%= movie.rate %></h4>
                    <h4  class="text">Running Time <i class="fas fa-history "></i>  : <%= movie.time %></h4>
                    <h4  class="text">Score <i class="fas fa-star" ></i> : <%= movie.score %></h4>
                    <h4  class="text">Release Date <i class="fas fa-calendar-alt"></i> : <%= movie.ReleaseDate %></h4>              
                    <h4  class="text">Director : <%= movie.Director %></h4>
                    <div class="get-ticket-poster">
                        <button class="btn-showtime">
                            Showtime<i class="fas fa-ticket-alt fa-lg"></i>
                        </button>
                    </div>
                    <div class="get-ticket-poster">
                        <a href="##moviereviews"><button class="btn-movie-reviews">
                            Movie Reviews<i class="fas fa-comment-alt"></i>
                        </button></a>
                    </div>
                   </div>
                   
                </div>
            </div>
            <div class="row align-items-start synopsis">
                <div class="col">
                    <span>Synopsis</span>
                    <p><%= movie.title %></p>
                </div>
            </div>
            <div class="row align-items-start ">
                <div class="col-sm-4 col-md-8 video-mobile">
                    <div class="border-trailer">
                        <h5>Watch the Trailer</h5>
                        <iframe class="float-end"
                        src="https://www.youtube.com/embed/<%= movie.video %>">
                        </iframe> 
                    </div>
                </div>
            </div>

            <div class="get-ticket-mobile">
                <button class="btn-showtime">
                    showtime
                </button>
            </div>
          
            <div class="comments">
                <!-- <a class="btn btn-primary" href = '/movies/<%= movie._id %>/new-comment/comment'>Add new comment</a> -->
                <span class="header-comments" id="#moviereviews">Movie Reviews<i class="fas fa-comment-alt"></i></span>
                <a class="btn btn-primary btn-addcomment" href = '/movies/<%= movie._id %>/new-comment/comment'>Add new comment</a>
                <% movie.comments.forEach(function(comment){ %>
                  <p>
                      <strong><%= comment.author.username %></strong> - <%= comment.text %>
                  </p>    
                  <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                    <a id="edit-form" class="btn btn-warning" href = '/movies/<%= movie._id %>/new-comment/<%= comment._id %>/edit-commet'>Edit comment</a>
              
                    <form id = 'delete-form' action = '/movies/<%= movie._id %>/new-comment/delete-comment/<%= comment._id %>?_method=DELETE' method='POST'>
                        <button type='submit' class="btn btn-danger">Delete</button>
                    </form>
                 <% } %> 
                 
              <% }); %>
              <a class="btn btn-primary btn-addcomment-mobile" href = '/movies/<%= movie._id %>/new-comment/comment'>Add new comment</a>  
              
              </div>
            <!-- <div class="row align-items-start video-trailer">
                <div class="col video ">
                    <div class="border-trailer">
                        <h5>Watch the Trailer</h5>
                        <iframe width="420" height="315" class="float-end"
                        src="https://www.youtube.com/embed/<%= movie.video %>">
                        </iframe> 
                    </div>
                </div>
            </div>
           -->
            
        </div>
    </div>
</div>





<%- include('partials/footer.ejs') %> 